<!--Body-->
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        Login
      </h1>
      <!--Error message if any-->
      <% if(success_msg != ''){ %>
        <p class="success">
          <strong>
            <%=success_msg%>
          </strong>
        </p>
      <% } %>
      <% if(error_msg != ''){ %>
        <p class="error">
          <strong>
            <%=error_msg%>
          </strong>
        </p>
      <% } %>
      <% if(error != ''){ %>
        <p class="error">
          <strong>
            <%=error %>
          </strong>
        </p>
      <% } %>
      <!--Login Form-->
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4" id="or">
       <span>OR</span>
      </p>
      <div class="Google">
      <a href="/users/google"><button type="button" class="btn btn-primary" id="Google" >
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-google" viewBox="0 0 18 18">
<path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"></path>
        </svg> Login with Google </button></a>
      </div>
      <p class="lead mt-4">
        Don't have an account? <a href="/users/signUp">Register</a>
      </p>
    </div>
