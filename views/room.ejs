<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Chat</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
      const username="<%=firstname + ' ' + lastname%>"
    </script>
  </head>
  <body>
    <!--Navbar-->
    <nav class="nav fixed-top room-nav">
      <div class="container">
        <div class="row">
          <div class="column3">
            <div class="header__back">
              <i class="fas fa-angle-left"></i>
            </div>
            <h1 class="logo1">
              Video Chat
            </h1>
          </div>
          <div id="leaveButton" class="column4 hangUp"><!--Leave Button-->
            <i><button type="button" class="btn btn-danger leave_call"> <a href="/dashboard" id="leave">Leave Call</a> </button></i>
          </div>
        </div>
      </div>
    </nav>
    
    <div class="main">

      <!--Video-->
      <div class="main__left">
        <div class="videos__group">
          <div id="video-grid">

          </div>  
        </div>
        <div class="options">
          <div class="options__left">
            <!--Camera on & off-->
            <div id="stopVideo" class="options__button">
              <i class="fa fa-video-camera"></i>
            </div>
            <!--Mute & unmute-->
            <div id="muteButton" class="options__button">
              <i class="fa fa-microphone"></i>
            </div>
            <!--Chat icon for small screen-->
            <div id="showChat" class="options__button">
              <i class="fa fa-comment"></i>
            </div>
          </div>
          <div class="options__right">
            <!--Invite Button-->
            <div id="inviteButton" class="options__button">
              <i class="fas fa-user-plus"></i>
            </div>
          </div>
        </div>
      </div>

      <!--Chat-->
      <div class="main__right">
        <div class="main__chat_window">
          <h4 id="chat">Chat</h4>
          <div class="messages">

          </div>  
        </div>
        <div class="main__message_container">
          <!--Text input-->
          <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
          <div id="send" class="options__button">
            <i class="fa fa-paper-plane" aria-hidden="true"></i>
          </div>
        </div>
      </div>
      
    </div>
  </body>
  <script src="script.js"></script>
</html>